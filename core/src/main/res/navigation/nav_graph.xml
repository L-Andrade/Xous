<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.andradel.xous.home.ui.HomeFragment"
        android:label="home_fragment">
        <action
            android:id="@+id/homeToShowProfile"
            app:destination="@id/showProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/showProfileFragment"
        android:name="com.andradel.xous.showprofile.ui.ShowProfileFragment"
        android:label="show_profile_fragment">
        <argument
            android:name="show"
            app:argType="com.andradel.xous.commonmodels.internal.Show" />
        <action
            android:id="@+id/showProfileToShowProfile"
            app:destination="@id/showProfileFragment" />
        <action
            android:id="@+id/showProfileToGallery"
            app:destination="@id/galleryFragment" />
        <action
            android:id="@+id/showProfileToSeason"
            app:destination="@id/seasonFragment" />
    </fragment>
    <fragment
        android:id="@+id/galleryFragment"
        android:name="com.andradel.xous.showprofile.ui.gallery.GalleryFragment"
        android:label="gallery_fragment">
        <argument
            android:name="images"
            app:argType="string[]" />
        <argument
            android:name="selectedImage"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/seasonFragment"
        android:name="com.andradel.xous.showprofile.ui.season.SeasonFragment"
        android:label="season_fragment">
        <argument
            android:name="show"
            app:argType="com.andradel.xous.commonmodels.internal.Show" />
        <argument
            android:name="season"
            app:argType="com.andradel.xous.commonmodels.internal.Season" />
        <action
            android:id="@+id/seasonToGallery"
            app:destination="@id/galleryFragment" />
    </fragment>

    <navigation
        android:id="@+id/search"
        app:startDestination="@id/searchFragment">
        <fragment
            android:id="@+id/searchFragment"
            android:name="com.andradel.xous.search.ui.SearchFragment"
            android:label="search_fragment" />

        <fragment
            android:id="@+id/showSearchFragment"
            android:name="com.andradel.xous.search.ui.fragments.ShowSearchFragment"
            android:label="show_search_fragment">
            <action
                android:id="@+id/searchToShowProfile"
                app:destination="@id/showProfileFragment" />
        </fragment>
    </navigation>
</navigation>