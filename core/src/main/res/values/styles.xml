<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/font_family</item>
        <item name="toolbarStyle">@style/XousToolbar</item>
    </style>

    <!-- TODO: Move to :commonui-->

    <style name="CollapsingToolbarLayoutTextStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="ExpandedToolbarLayoutTextStyle" parent="AppTheme">
        <item name="android:textColor">?android:attr/colorForegroundInverse</item>
    </style>

    <style name="XousToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleTextColor">?android:attr/colorForegroundInverse</item>
        <item name="android:background">?android:attr/colorPrimary</item>
    </style>

    <style name="HeaderTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:padding">@dimen/material_single_spacing</item>
        <item name="android:textSize">@dimen/not_as_big_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>